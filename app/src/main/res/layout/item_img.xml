<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clImg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/сolorBackgroundBlack"
    tools:layout_editor_absoluteY="81dp">

    <ProgressBar
        android:id="@+id/pbImg"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerImg" />

    <ImageView
        android:id="@+id/colIsCryptoImgImg"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:background="@color/сolorBackgroundBlack"
        android:focusable="auto"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:scaleType="fitCenter"
        android:tag="101"
        app:layout_constraintStart_toEndOf="@+id/colFavImg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_lock_outline_white_24dp">

    </ImageView>

    <!--android:background="@color/сolorBackgroundBlack"-->

    <ImageView
        android:id="@+id/colImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:foregroundTint="@color/сolorPrimaryBlack"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/colIsCryptoImgImg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel">

    </ImageView>

    <TextView
        android:id="@+id/colNameImg"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:background="@color/сolorBackgroundBlack"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/сolorTextBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colImg"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/tvDateCreateImg"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        android:textColor="@color/сolorTextBlack"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerImg"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:background="@color/сolorTextBlack"
        app:layout_constraintBottom_toTopOf="@+id/pbImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colNameImg" />

</android.support.constraint.ConstraintLayout>