<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/сolorTextBlack"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/colFavImgRV"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@color/сolorBackgroundBlack"
        android:focusable="auto"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:scaleType="fitCenter"
        android:tag="100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star">

    </ImageView>

    <ImageView
        android:id="@+id/colIsCryptoImgRV"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@color/сolorBackgroundBlack"
        android:focusable="auto"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:scaleType="fitCenter"
        android:tag="101"
        app:layout_constraintStart_toEndOf="@+id/colFavImgRV"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_lock_outline_white_24dp">

    </ImageView>

    <TextView
        android:id="@+id/colNameTextRV"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:background="@color/сolorBackgroundBlack"
        android:focusable="auto"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:text="Логин/Пароль"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/сolorTextBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/colIsCryptoImgRV"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/tvDateCreatePassRV"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        android:textColor="@color/сolorTextBlack"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2RV"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="@color/сolorTextBlack"
        app:layout_constraintTop_toBottomOf="@+id/colFavImgRV"
        tools:layout_editor_absoluteX="1dp" />


</android.support.constraint.ConstraintLayout>